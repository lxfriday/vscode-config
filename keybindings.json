// 将键绑定放入此文件中以覆盖默认值
[
  {
    "key": "cmd+d",
    "command": "editor.action.deleteLines",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+k",
    "command": "editor.action.addSelectionToNextFindMatch",
    "when": "editorFocus"
  },
  {
    "key":"ctrl+shift+/",
    "command": "editor.action.blockComment",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+u",
    "command": "uppercase",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+l",
    "command": "lowercase",
    "when": "editorTextFocus"
  },
  {
    "key": "ctrl+c",
    "command": "capitalcase",
    "when": "editorTextFocus"
  }
]